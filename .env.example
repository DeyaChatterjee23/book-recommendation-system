# Application Configuration
APP_NAME=Book Recommender System
APP_VERSION=1.0.0
APP_DESCRIPTION=A production-ready book recommendation system
DEBUG=False
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=False

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bookdb
DATABASE_ECHO=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Ollama Configuration (for content-based recommendations)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b

# Security Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Model Configuration
MODEL_PATH=data/models/
SIMILARITY_THRESHOLD=0.5
MAX_RECOMMENDATIONS=20

# Performance Configuration
CACHE_ENABLED=True
BATCH_SIZE=1000
WORKERS=4

# Monitoring
ENABLE_METRICS=True
HEALTH_CHECK_INTERVAL=30
